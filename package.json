{
  "name": "exoptus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:mobile\" \"npm run dev:auth\"",
    "dev:mobile": "npm run start -w @exoptus/mobile",
    "dev:auth": "npm run dev -w @exoptus/auth-service",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:migrate": "npm run db:migrate -w @exoptus/auth-service",
    "db:studio": "npm run db:studio -w @exoptus/auth-service",
    "db:push": "npm run db:push -w @exoptus/auth-service",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "android:dev": "concurrently --kill-others \"npm:auth-server\" \"npm:mobile-android-dev\"",
    "auth-server": "npm run dev -w @exoptus/auth-service",
    "mobile-android-dev": "npm run android:dev -w @exoptus/mobile"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
