{
  "name": "exoptus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:mobile\" \"npm run dev:auth\"",
    "dev:mobile": "npm run start -w @exoptus/mobile",
    "dev:auth": "npm run dev -w @exoptus/auth-service",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:migrate": "npm run db:migrate -w @exoptus/auth-service",
    "db:studio": "npm run db:studio -w @exoptus/auth-service",
    "db:push": "npm run db:push -w @exoptus/auth-service",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
