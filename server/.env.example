# Server environment variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/exoptus?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Admin Dashboard Authentication
# REQUIRED: Generate a strong, random key for admin API access
# Example: Use `openssl rand -hex 32` or a UUID generator
ADMIN_KEY="your-secure-admin-key-here"

# Email (using Gmail SMTP or any provider)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="Exoptus <noreply@exoptus.com>"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# App
APP_URL="exoptus://"
API_URL="http://localhost:3000"
NODE_ENV="development"
PORT=3000
