# Server environment variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/exoptus?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Email (using Gmail SMTP or any provider)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="Exoptus <noreply@exoptus.com>"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# App URLs
APP_URL="exoptus://"
# For mobile device testing, set these to your computer's local IP address
# To find your IP: Windows (ipconfig), Mac/Linux (ifconfig | grep inet)
# Example: API_URL="http://192.168.1.100:3000"
API_URL="http://localhost:3000"
NODE_ENV="development"
PORT=3000
